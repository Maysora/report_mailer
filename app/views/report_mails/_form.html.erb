<%= form_with(model: report_mail) do |form| %>
  <% if report_mail.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(report_mail.errors.count, "error") %> prohibited this report_mail from being saved:</h2>

      <ul>
        <% report_mail.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-2">
    <%= form.label :date %>
    <%= form.text_field :date, class: 'form-control' %>
  </div>

  <div class="mb-2">
    <%= form.label :to %>
    <%= form.text_field :to, class: 'form-control' %>
  </div>

  <div class="mb-2">
    <%= form.label :cc %>
    <%= form.text_field :cc, class: 'form-control' %>
  </div>

  <div class="mb-2">
    <%= form.label :subject %>
    <%= form.text_field :subject, class: 'form-control' %>
  </div>

  <div class="mb-2">
    <%= form.label :template %>
    <%= form.select :template, ReportMail::TEMPLATES, {}, class: 'form-select' %>
  </div>

  <div class="mb-2">
    <%= form.label :signature %>
    <%= form.text_area :signature, value: form.object.signature.presence || Setting['mail_signature'], class: 'form-control' %>
  </div>

  <div class="mb-2">
    <%= form.label :status %>
    <%= form.select :status, ReportMail.statuses, {}, class: 'form-select' %>
  </div>

  <div>
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
