<p style="color: green"><%= notice %></p>

<h1>Report mails</h1>

<div class="mb-2">
  <%= link_to_if(params[:incomplete_tasks_data], "Show all", url_for(incomplete_tasks_data: nil), class: 'btn btn-outline-success') do %>
    <%= link_to("Filter only incomplete tasks data", url_for(incomplete_tasks_data: 1), class: 'btn btn-outline-warning') %>
  <% end %>
  <%= link_to("Monthly summary", monthly_summary_report_mails_path, class: 'btn btn-outline-info') %>
</div>

<div id="report_mails">
  <% @report_mails.each do |report_mail| %>
    <%= render report_mail %>
    <p>
      <%= link_to "Show this report mail", report_mail %> |
      <%= link_to "Preview", '#', onclick: "window.open('/rails/mailers/report_mailer/send_report?id=#{report_mail.id}', 'mail_preview_#{report_mail.id}'); return false;" %>
    </p>
  <% end %>
</div>

<%= link_to "New report mail", new_report_mail_path %>
