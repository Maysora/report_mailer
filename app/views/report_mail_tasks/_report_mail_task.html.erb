<div id="<%= dom_id report_mail_task %>" class="card <%= report_mail_task.active? ? 'border-primary' : 'border-secondary text-muted' %> mb-2">
  <div class="card-body">
    <p>
      <strong>Issue number:</strong>
      <%= report_mail_task.issue_number %>
    </p>

    <p>
      <strong>Category:</strong>
      <%= report_mail_task.category %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= render_markdown(report_mail_task.description) %>
    </p>

    <p>
      <strong>Weight:</strong>
      <%= number_with_delimiter(report_mail_task.weight) %>
      <%= " (" + number_to_percentage(report_mail_task.weight_percentage, strip_insignificant_zeros: true) + ")" if report_mail_task.weight_percentage %>
    </p>

    <p>
      <strong>Progress status:</strong>
      <%= report_mail_task.progress_status %>
    </p>

    <p>
      <strong>Deploy status:</strong>
      <%= render_markdown(report_mail_task.deploy_status) %>
    </p>

    <p>
      <strong>Notes:</strong>
      <%= n2br report_mail_task.notes %>
    </p>

    <div class="d-flex justify-content-between">
      <%= link_to "Edit", [:edit, report_mail_task.project, report_mail_task], class: 'btn btn-primary' %>
      <div class="d-inline-block">
        <%= button_to "Delete", [report_mail_task.project, report_mail_task], method: :delete, data: { turbo_confirm: 'Delete?' }, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>
